<div class="row">
  <div class="col-sm-6 col-md-4">
    <div id="success" class="alert alert-success"{{#if noMessage}}hidden1{{/if}}>
    {{successMsg}}
    </div>
  </div>
</div>
<div class="container">

  <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">WOW FACT</h1>
 
  <hr class="mt-2 mb-5">
 {{#each products }}

   <div class="row">
     
       {{#each this }}
           <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img height="200px"  width="200px" src=" {{ this.imagePath }}" alt="...">
      <div class="caption">
        <h3>{{ this.title }}</h3>
        <p class="description">{{ this.description }}</p>
                <div class="price pull-left">{{ this.price }} Rs/-</div>

        <p><a style="float: right" href="/add-to-cart/{{this._id}}" class="btn btn-primary" role="button">Add to my-Cart</a> </p>
      
      </div>
    </div>
  </div>
       {{/each}}
       

  </div>
  
 {{/each}}